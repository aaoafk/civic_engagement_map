                            <div class="left menu">
                                <div class="item"> manage account settings </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class='row'>
                    <div class='col-12'>
                        <div class="ui simple dropdown item" style="font-size: 3rem; padding-top: 2.5rem;">
                            Feedback
                            <i class="dropdown icon"></i>
                            <div class="left menu">
                                <div class="item"> Give feedback here! </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
